//mod
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  box-shadow: 0 1px 3px rgba(34,25,25,0.4)
  -moz-box-shadow: 0 1px 2px rgba(34,25,25,0.4)
  -webkit-box-shadow: 0 1px 3px rgba(34,25,25,0.4)

box-shadow-heavy()
  box-shadow: 0 2px 5px rgba(34,25,25,0.5)
  -moz-box-shadow: 0 2px 5px rgba(34,25,25,0.5)
  -webkit-box-shadow: 0 2px 5px rgba(34,25,25,0.5)

//app
body
  padding-top: 60px
abbr
abbr[title]
  border:0px
  cursor:auto

//item
.item_picture_small
  height:50px
#item-form
  width:900px
#newitem
  width:870px
  height:370px
  padding:15px
  margin:0px 15px
  box-shadow-heavy()
  clear:both
  .header
    width:100%
    height:30px
    font-size:24px
  .pictureclose
    position: absolute
    top: -10px
    left: -10px
    width: 30px
    height: 30px
    background: transparent url(/images/cerabox.png) -40px 0
    cursor: pointer
    z-index: 1000
    text-decoration:none
    display:none
  .content
    position:relative
    width:100%
    height:340px
    clear:both
  .left
    width:415px
    float:left
    height:314px
    border:8px dashed #ccc
    overflow:hidden
    border-radius(3px)
    input
      margin:140px auto
      height:30px
      line-height:30px
      width:200px
      display:block
  .right
    float:right
    width:425px
    textarea
      width:415px
      height:284px
    .money
      width:415px
  .footer
    width:100%
    line-height:30px
    height:30px
    .right
      width:200px
      float:right
      text-align:right

